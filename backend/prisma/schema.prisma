generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Enums are not supported in SQLite, simplified to Strings in models

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  passwordHash     String    @map("password_hash")
  role             String    @default("guest") // guest, host, admin
  emailVerified    Boolean   @default(false) @map("email_verified")
  stripeCustomerId String?   @map("stripe_customer_id")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  hostProfile      Host?
  bookings         Booking[]
  reviews          Review[]

  @@map("users")
}

model Host {
  id                       String   @id @default(uuid())
  userId                   String   @unique @map("user_id")
  user                     User     @relation(fields: [userId], references: [id])
  companyName              String?  @map("company_name")
  phone                    String?
  address                  String?  // JSON stored as string
  stripeAccountId          String?  @map("stripe_account_id")
  stripeOnboardingComplete Boolean  @default(false) @map("stripe_onboarding_complete")
  verified                 Boolean  @default(false)
  createdAt                DateTime @default(now()) @map("created_at")

  listings                 Listing[]

  @@map("hosts")
}

model Listing {
  id           String        @id @default(uuid())
  hostId       String        @map("host_id")
  host         Host          @relation(fields: [hostId], references: [id])
  title        String
  description  String
  propertyType String        @map("property_type")
  location     String        // JSON stored as string
  basePrice    Decimal       @map("base_price")
  displayPrice Decimal       @map("display_price")
  currency     String        @default("EUR")
  maxGuests    Int           @map("max_guests")
  bedrooms     Int           @default(1)
  bathrooms    Int           @default(1)
  amenities    String        @default("[]") // JSON stored as string
  images       String        @default("[]") // JSON stored as string
  status       String        @default("draft") // draft, active, paused, deleted
  syncActive   Boolean       @default(false) @map("sync_active")
  externalIds  String?       @map("external_ids") // JSON stored as string
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  bookings     Booking[]
  availability Availability[]
  reviews      Review[]

  @@map("listings")
}

model Booking {
  id                    String        @id @default(uuid())
  listingId             String?       @map("listing_id")
  listing               Listing?      @relation(fields: [listingId], references: [id])
  guestId               String        @map("guest_id")
  guest                 User          @relation(fields: [guestId], references: [id])
  source                String        // direct, affiliate
  affiliateProvider     String?       @map("affiliate_provider")
  affiliateBookingId    String?       @map("affiliate_booking_id")
  checkIn               DateTime      @map("check_in")
  checkOut              DateTime      @map("check_out")
  guestsCount           Int           @map("guests_count")
  totalAmount           Decimal       @map("total_amount")
  commission            Decimal
  hostPayout            Decimal       @map("host_payout")
  status                String        @default("pending") // pending, confirmed, cancelled, completed
  stripePaymentIntentId String?       @map("stripe_payment_intent_id")
  stripeTransferId      String?       @map("stripe_transfer_id")
  createdAt             DateTime      @default(now()) @map("created_at")

  review                Review?

  @@map("bookings")
}

model Availability {
  id            String   @id @default(uuid())
  listingId     String   @map("listing_id")
  listing       Listing  @relation(fields: [listingId], references: [id])
  date          DateTime
  available     Boolean  @default(true)
  priceOverride Decimal? @map("price_override")
  minNights     Int      @default(1) @map("min_nights")

  @@unique([listingId, date])
  @@map("availability")
}

model Review {
  id           String   @id @default(uuid())
  bookingId    String   @unique @map("booking_id")
  booking      Booking  @relation(fields: [bookingId], references: [id])
  listingId    String   @map("listing_id")
  listing      Listing  @relation(fields: [listingId], references: [id])
  guestId      String   @map("guest_id")
  guest        User     @relation(fields: [guestId], references: [id])
  rating       Int
  comment      String?
  hostResponse String?  @map("host_response")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("reviews")
}
